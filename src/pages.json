{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/login/index"
		},
		{
			"path": "pages/home/index",
			"style": {
				"enablePullDownRefresh": true,
				"onReachBottomDistance": 50
			}
		},
		{
			"path": "pages/play/index"
		},
		{
			"path": "pages/message/index",
			"style": {
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/mine/index"
		},
		{
			"path": "pages/detail/index"
		},
		{
			"path": "pages/message/message-detail/index",
			"style": {
				"navigationStyle": "default",
				"navigationBarTitleText": "会话详情"
			}
		},
		{
			"path": "pages/setting/index",
			"style": {
				"navigationStyle": "default",
				"navigationBarTitleText": "设置"
			}
		}
	],
	"tabBar": {
		"color": "#cdcdcd",
		"selectedColor": "#2c2c2c",
		"list": [{
				"pagePath": "pages/home/index",
				"iconPath": "static/image/icon_home.png",
				"selectedIconPath": "static/image/ic_home_HL.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/play/index",
				"iconPath": "static/image/icon_play.png",
				"selectedIconPath": "static/image/icon_play_HL.png",
				"text": "会玩"
			},
			{
				"pagePath": "pages/message/index",
				"iconPath": "static/image/icon_msg.png",
				"selectedIconPath": "static/image/icon_msg_HL.png",
				"text": "消息"
			},
			{
				"pagePath": "pages/mine/index",
				"iconPath": "static/image/icon_mine.png",
				"selectedIconPath": "static/image/icon_mine_HL.png",
				"text": "我的"
			}
		]
	},
	"globalStyle": {
		"navigationStyle": "custom",
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#F8F8F8",
		"app-plus": {
			"bounce": "none",
			"scrollIndicator": "none"
		}
	}
}